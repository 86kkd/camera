    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "test_mobile",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test_mobile.py",
            "console": "integratedTerminal"
        },
        {
            "name": "train",
            "type": "debugpy",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "env": {
                // "PATH": "PATH='$PATH':'/usr/local/cuda/bin'",
                "LD_LIBRARY_PATH": "LD_LIBRARY_PATH='$LD_LIBRARY_PATH':'/opt/cuda/lib64'",
            },
            "justMyCode": false
        },
    ]
}